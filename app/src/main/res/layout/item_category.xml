<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <com.example.asus.calculator.ui.view.SquareImageView
        android:id="@+id/iv_item_category"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:src="@drawable/cherry" />

    <TextView
        android:id="@+id/tv_item_category"
        style="@style/GridTextViewStyle"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:text="Sample text for category with a lot of attributes such as null" />
</RelativeLayout>